<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/singlerowimageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/singlerowtextView1"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/singlerowimageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/singlerowtextView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:textColor="#FFFF"
        android:gravity="end"
        android:id="@+id/singlerowtextView2"
        android:layout_alignBottom="@+id/singlerowimageView"
        android:layout_toRightOf="@+id/singlerowimageView"
        android:layout_alignRight="@+id/singlerowtextView1"
        android:layout_alignEnd="@+id/singlerowtextView1" />
</RelativeLayout>